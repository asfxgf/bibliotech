<div class="container">
  <%= simple_form_for(@book) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :author %>
      <%= f.input :category %>
      <%= f.input :picture %>
      <%= f.input :amazon_url %>
      <%= f.input :language %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
